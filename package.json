{
  "name": "ufficient-app",
  "version": "1.0.0",
  "private": true,
  "description": "UFFICIENT APP - Unlock Your Most Efficient Self",
  "scripts": {
    "dev": "turbo run dev",
    "dev:landing": "npm run dev --workspace=apps/landing",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:mobile-pwa": "npm run dev --workspace=apps/mobile-pwa",
    "dev:mobile-native": "npm run start --workspace=apps/mobile-native",
    "build": "turbo run build",
    "build:landing": "npm run build --workspace=apps/landing",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:mobile-pwa": "npm run build --workspace=apps/mobile-pwa",
    "build:mobile-native": "npm run build --workspace=apps/mobile-native",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "clean:cache": "turbo daemon clean",
    "install-all": "npm install",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "turbo": "^2.5.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "productivity",
    "task-management",
    "gamification",
    "ai",
    "react-native",
    "nextjs"
  ],
  "author": "UFFICIENT Team",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.11.0"
  }
}
