# UFFICIENT V1 Environment Configuration Template
# Copy to .env.local in each app directory

# ===========================================
# SHARED CONFIGURATION (ALL APPS)
# ===========================================

# App URLs (Update with your actual domains)
NEXT_PUBLIC_LANDING_URL=https://www.ufficient.app
NEXT_PUBLIC_ADMIN_URL=https://admin.ufficient.app
NEXT_PUBLIC_PWA_URL=https://app.ufficient.app

# API Configuration
NEXT_PUBLIC_API_URL=https://api.ufficient.app
NEXT_PUBLIC_API_VERSION=v1

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# Admin Authentication
ADMIN_SECRET_KEY=your-super-secure-admin-secret-key-here
JWT_SECRET=your-jwt-secret-for-token-signing
ADMIN_EMAIL=admin@ufficient.app
ADMIN_PASSWORD=your-secure-admin-password

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400

# ===========================================
# DATABASE & BACKEND SERVICES
# ===========================================

# Firebase Configuration (Option 1)
FIREBASE_PROJECT_ID=ufficient-app
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=ufficient-app.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://ufficient-app.firebaseio.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=ufficient-app.appspot.com

# Supabase Configuration (Option 2)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# Email Service (Choose one)
RESEND_API_KEY=your-resend-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
NODEMAILER_EMAIL=your-email@domain.com
NODEMAILER_PASSWORD=your-email-password

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Payment Processing (Future)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# AI & MACHINE LEARNING (V2 Ready)
# ===========================================

# OpenAI API (for AI task generation)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Analytics Database (ML Data Storage)
ANALYTICS_DATABASE_URL=your-analytics-db-url

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================

# Development Mode
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Debug Flags
DEBUG_ANALYTICS=false
DEBUG_API=false
DEBUG_AUTH=false

# ===========================================
# PWA CONFIGURATION
# ===========================================

# PWA Settings
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PUSH_NOTIFICATIONS=true

# ===========================================
# NATIVE APP CONFIGURATION (EAS Build)
# ===========================================

# Expo Configuration
EXPO_PROJECT_ID=your-expo-project-id
EAS_PROJECT_ID=your-eas-project-id

# App Store Configuration
IOS_BUNDLE_ID=com.ufficient.app
ANDROID_PACKAGE=com.ufficient.app

# Push Notifications
EXPO_PUSH_TOKEN=ExponentPushToken[your-token]

# ===========================================
# SECURITY & RATE LIMITING
# ===========================================

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=https://www.ufficient.app,https://admin.ufficient.app,https://app.ufficient.app

# Security Headers
SECURITY_HEADERS_ENABLED=true
